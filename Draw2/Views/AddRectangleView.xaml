<Window x:Class="Draw2.Views.AddRectangleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draw2.Views"
        xmlns:ViewModel="clr-namespace:Draw2.ViewModels"
        d:DataContext="{d:DesignInstance Type=ViewModel:RectangleViewModel, IsDesignTimeCreatable=True}"
        DataContextChanged="OnDataContextChanged"
        mc:Ignorable="d"
        
        Title="AddRectangle"
        Width="300"
        Height="350">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="DarkSlateBlue"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Height" Value="30"></Setter>
        </Style>

    </Window.Resources>


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Rectangle Details:" Foreground="DarkSlateBlue"/>

        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Content="Width:" Foreground="DarkSlateBlue"/>
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="WidthTextBox" Text="{Binding rectangle.Width}"/>

        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Content="Height:" Foreground="DarkSlateBlue"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="HeightTextBox" Text="{Binding rectangle.Height}"/>

        <Label VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" Content="X Position:" Foreground="DarkSlateBlue"/>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="XPositionTextBox" Text="{Binding rectangle.Startx}"/>

        <Label VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" Content="Y Position:" Foreground="DarkSlateBlue" />
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="YPositionTextBox" Text="{Binding rectangle.Starty}"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Grid.Column="1">
            <Button Margin="10 0 5 0" Content="Add Rectangle" Style="{StaticResource DefaultButton}" Command="{Binding AddRectangleCommand}"/>
            <Button  Content="Cancel" Style="{StaticResource DefaultButton}" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
